<Window x:Class="BAWsurvival.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAWsurvival"
        mc:Ignorable="d"
        Title="MainWindow" Height="410" Width="540">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="290"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="myCanvas" HorizontalAlignment="Center" Height="260"  VerticalAlignment="Center" Width="500" Background="Black" />
        <Button x:Name="NewTick" Content="New tick" HorizontalAlignment="Left" Margin="16,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="91" Click="NewTick_Click"/>
        <Button x:Name="ShowAnimation" Content="Show animation" HorizontalAlignment="Left" Margin="16,37,0,0" Grid.Row="1" VerticalAlignment="Top" Width="91" Click="ShowAnimation_Click"/>
    </Grid>
</Window>
