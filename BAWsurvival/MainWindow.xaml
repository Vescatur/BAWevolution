<Window x:Class="BAWsurvival.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAWsurvival"
        mc:Ignorable="d"
        Title="MainWindow" Height="410" Width="540">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="290"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="myCanvas" HorizontalAlignment="Center" Height="260"  VerticalAlignment="Center" Width="500" Background="Black" />
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="16,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="button_Click"/>
    </Grid>
</Window>
